@page
@{
    ViewData["Title"] = "Razor";

    // Kurser sparas i en array
    string[] courses = {
"Webbutveckling I - DT057G",
"Introduktion till programmering i JavaScript - DT084G",
"Digital bildbehandling för webb - DT163G",
"Webbutveckling II - DT093G"
};

    // Veckodag sparas i "weekday" och hämtas med nedan kodsnutt
    DayOfWeek weekday = DateTime.Today.DayOfWeek;
}

<div class="container">
    <h1 class="display-4">Razor</h1>
    <h2 class="display-6">Kurser</h2>
    <p>Nedan är en "unordered list" med utvalda kurser jag läst i programmet. Listan skrivs ut med en foreach-loop.</p>

    <ul>
        @foreach (string course in courses) // Kurser loopas igenom med foreach
        {
            <li>@course</li>
        }
    </ul>

    <h2 class="display-6">Datum och klockslag</h2>
    <p>@DateTime.Now</p>

    <h2 class="display-6">Är det måndag idag?</h2>

    @if (weekday == DayOfWeek.Monday) // Här kontrolleras om det är måndag idag
    {
        <p>Idag är det måndag!</p>
    }
    else
    {
        <p>Idag är det inte måndag!</p>
    }
</div>